{
	"languageserver": {
		"python": {
			"command": "pyright-langserver",
			"args": [
				"--stdio"
			],
			"filetypes": [
				"python"
			],
			"settings": {
				"python": {
					"analysis": {
						"autoSearchPaths": true,
						"useLibraryCodeForTypes": true,
						"diagnosticMode": "openFilesOnly",
						"venvPath": "~/venvs/"
					}
				}
			}
		},
		"ansible": {
			"command": "ansible-language-server",
			"args": [
				"--stdio"
			],
			"filetypes": [
				"yml"
			],
			"initializationOptions": {
				"ansible": {
					"ansible": {
						"path": "ansible"
					},
					"validation": {
						"enabled": true,
						"lint": {
							"enabled": true
						}
					},
					"completion": {
						"provideRedirectModules": true,
						"provideModuleOptionAliases": true
					}
				}
			}
		}
	},
	"ltex.enabled": true,
	"ltex.language": "es",
	"ltex.checkFrequency": "save",
	"ltex.additionalRules.motherTongue": "es",
	"ltex.additionalRules.enablePickyRules": true,
	"ltex.java.path": "/usr/lib/jvm/java-17-openjdk-amd64",
	"ltex.java.args": [
		"-Xmx1G",
		"--add-opens",
		"java.base/java.util=ALL-UNNAMED",
		"--add-opens",
		"java.base/java.lang=ALL-UNNAMED"
	],
	"ltex.latex.commands": {
		"\\cite{}": "ignore",
		"\\citep{}": "ignore",
		"\\citet{}": "ignore",
		"\\ref{}": "ignore",
		"\\label{}": "ignore",
		"\\input{}": "ignore",
		"\\include{}": "ignore",
		"\\documentclass{}": "ignore",
		"\\usepackage{}": "ignore"
	},
	"ltex.latex.environments": {
		"verbatim": "ignore",
		"lstlisting": "ignore",
		"equation": "ignore",
		"align": "ignore",
		"figure": "ignore"
	},
	"ltex.markdown.nodes": {
		"CodeBlock": "ignore",
		"InlineCode": "ignore"
	},
	"ltex.filetypes": [
		"markdown",
		"tex",
		"latex",
		"bib",
		"plaintex",
		"rst"
	],
	"ltex.hiddenFalsePositives": {
		"es": [
			"{\"rule\": \"MORFOLOGIK_RULE_ES\", \"sentence\": \"^Dummy\\\\d+$\"}"
		]
	},
	"coc.source.vimtex.enable": true,
	"coc.source.vimtex.priority": 99,
	"coc.source.vimtex.filetypes": [
		"tex",
		"latex",
		"plaintex"
	],
	"python.formatting.provider": "black",
	"python.linting.enabled": true,
	"python.pythonPath": "python3",
	"python.venvPath": "~/.venv/",
	"python.analysis.diagnosticSeverityOverrides": {
		"reportUnusedVariable": "warning",
		"reportUnusedImport": "warning"
	},
	"ansible.ansible.useFullyQualifiedCollectionNames": true,
	"ansible.ansibleLint.enabled": true,
	"ansible.schemaCache.enable": true,
	"ansible.ansible.rolesPath": "./roles",
	"ansible.ansible.collectionsPaths": "./collections",
	"ansible.ansibleLint.arguments": "--profile=production",
	"java.import.gradle.java.home": "/usr/lib/jvm/java-17-openjdk-amd64",
	"snippets.ultisnips.pythonPrompt": false,
	"java.imports.gradle.wrapper.checksums": [
		{
			"sha256": "76805e32c009c0cf0dd5d206bddc9fb22ea42e84db904b764f3047de095493f3",
			"allowed": false
		}
	],
	"git.enableGutters": true,
	"extensions.updateCheck": "never", 
	"suggest.triggerAfterInsertEnter": true
}
